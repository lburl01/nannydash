<div id="sitter-register-page">
    <header class="header-bar">
        <h1 ui-sref="/">nanny<span class="italic">dash</span></h1>
        <h2>Registration</h2>
    </header>

    <% if @family.errors %>
    <div><%= @family.errors.full_messages.to_sentence %></div>
    <% end %>
    <main class="register-area">

        <%= form_for(@family, url: family_new_path, html: { multipart: true }) do |f| %>

        <h3 class="section-title">Personal Information</h3>
        <div class="section-border">

          <div class="field">
            <div class="name form-name">
              <span>
              <%= f.label :first_name %>
              <%= f.text_field :first_name, placeholder: "First Name" %>
              </span>
              <span>
              <%= f.label :last_name %>
              <%= f.text_field :last_name, placeholder: "Last Name" %>
              </span>
            </div>
          </div>

          <div class="field">
            <%= f.label :street %>
            <%= f.text_field :street, placeholder: "Street" %>
          </div>

          <div class="field">
            <%= f.label :city %>
            <%= f.text_field :city, placeholder: "City" %>
          </div>

          <div class="field">
            <%= f.label :county %>
            <%= f.text_field :county, placeholder: "County" %>
          </div>

          <div class="field">
            <div class="state">
              <span>
              <%= f.label :state %>
              <%= f.text_field :state, placeholder: "State" %>
              </span>
              <span>
              <%= f.label :zip_code %>
              <%= f.text_field :zip_code, placeholder: "Zip Code" %>
              </span>
            </div>
          </div>

          <div class="field">
            <div class="phone">
              <span>
              <%= f.label :phone_number %>
              <%= f.text_field :phone_number, placeholder: "Phone Number" %>
              </span>
              <span>
              <%= f.label :about %>
              <%= f.text_field :about, placeholder: "Tell us more about your family!" %>
              </span>
            </div>
          </div>
        </div>

        <h3 class="section-title">Login Information</h3>
        <div class="section-border picture">
          <div class="field">
            <%= f.label :email %>
            <%= f.email_field :email, placeholder: "Email Address" %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password %>
          </div>

          <%= f.label :picture, "Upload Profile Picture" %>
          <%= image_tag("upload.svg", :alt => "Preview image on landing page") %>

          <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png,image/jpg' %>

          <%= f.hidden_field :role, value: "family" %>
          <%= f.hidden_field :active, value: true %>
        </div>


        <section class="bottom-register-form">
            <%= f.submit "Register", class: "btn btn-primary" %>
        </section>

        <% end %>
    </main>
</div>
