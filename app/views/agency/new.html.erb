<% if @agency.errors %>
  <div><%= @agency.errors.full_messages.to_sentence %></div>
<% end %>

<%= form_for(@agency, url: agency_path, html: { multipart: true }) do |f| %>
  <%= f.label :first_name %>:
  <%= f.text_field :first_name, placeholder: "First Name" %>
  <%= f.label :last_name %>:
  <%= f.text_field :last_name, placeholder: "Last Name" %>
  <%= f.label :email %>:
  <%= f.email_field :email, placeholder: "Email Address" %>
  <%= f.label :street %>:
  <%= f.text_field :street, placeholder: "Street" %>
  <%= f.label :city %>:
  <%= f.text_field :city, placeholder: "Raleigh" %>
  <%= f.label :state %>:
  <%= f.text_field :state, placeholder: "NC" %>
  <%= f.label :zip_code %>:
  <%= f.text_field :zip_code, placeholder: "Zip Code" %>
  <%= f.label :county %>:
  <%= f.text_field :county, placeholder: "County" %>
  <%= f.label :password %>:
  <%= f.password_field :password %>
  <%= f.hidden_field :role, value: "manager" %>
  <hr>
  <%= f.submit "Join", class: "btn btn-primary" %>
  <%= f.file_field :picture, accept: 'image/jpeg,image/gif,image/png,image/jpg' %>
<% end %>
